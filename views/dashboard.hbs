<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your memories</p>
{{#if memories}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each memories}}
        <tr>
            <td><a href="/memories/{{_id}}">{{title}}</a></td>
            <td>{{formatDate createdAt 'DD-MMMM-YYYY, h:mm:ss a'}}</td>
            <td><span class='dash-status'>{{status}}</span></td>

        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any memories</p>

{{/if}}