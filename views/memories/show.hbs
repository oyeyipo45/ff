<div class="row">
    <div class="col s12 m8">
        <h3>{{memory.title}}
            <small>{{{editIcon memory.user user memory._id false}}}</small>
        </h3>
        <div class="card memory">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'DD MMMM YYYY, h:mm:ss a'}}</span>
                {{{memory.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{memory.user.displayName}}</span>
                <img src="{{memory.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/memories/user/{{memory.user._id}}">More From {{memory.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>